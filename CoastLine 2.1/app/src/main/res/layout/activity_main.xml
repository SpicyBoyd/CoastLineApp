<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLight"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="15dp"
        android:layout_marginStart="15dp"
        android:layout_weight="1"
        android:background="@color/colorLight"
        android:contentDescription="@string/miaoli"
        android:onClick="miaoliClick"
        android:scaleType="fitCenter"
        android:src="@drawable/miaoli_btn" />

    <ImageButton
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:background="@color/colorLight"
        android:contentDescription="@string/taichung"
        android:onClick="taichungClick"
        android:scaleType="fitCenter"
        android:src="@drawable/taichung_btn" />

</LinearLayout>