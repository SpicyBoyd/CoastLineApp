<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/mainActivityBackgroundColor"
    tools:context="com.travel.coastline.MainActivity">

    <ImageButton
        android:id="@+id/miaoliButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="15dp"
        android:layout_weight="1"
        android:src="@drawable/mainactiviy_miaoli"
        android:contentDescription="@string/mainactiviy_miaoli_pic"
        android:background="@color/mainActivityBackgroundColor"
        android:scaleType="fitCenter"/>

    <ImageButton
        android:id="@+id/taichungButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:layout_weight="1"
        android:src="@drawable/mainactiviy_taichung"
        android:contentDescription="@string/mainactiviy_taichung_pic"
        android:background="@color/mainActivityBackgroundColor"
        android:scaleType="fitCenter"/>

</LinearLayout>
